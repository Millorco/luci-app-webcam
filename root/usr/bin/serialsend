#!/bin/sh

. /usr/bin/webcam.cfg

SIGNAL=$1 # Esempio: un byte ACK. Sostituisci con il tuo segnale desiderato

stty -F "$WC_SERIAL_PORT" "$WC_BAUD_RATES" cs8 -parenb -cstopb 2>/dev/null

if [ $? -ne 0 ]; then
	echo "Errore: Impossibile configurare la porta seriale $WC_SERIAL_PORT" >&2
	exit 1
fi

printf "$SIGNAL" > "$WC_SERIAL_PORT"

# Controlla se l'invio Ã¨ andato a buon fine (opzionale ma consigliato)
if [ $? -ne 0 ]; then
	echo "Errore: Impossibile inviare il segnale sulla porta seriale $WC_SERIAL_PORT" >&2
	exit 1
fi
