 1 #!/bin/sh
 2
 3 SERIAL_PORT="/dev/ttyS0" # Assicurati che questo sia il percorso corretto della tua porta seriale
 4 BAUD_RATE="9600"
 5 SIGNAL=$1 # Esempio: un byte ACK. Sostituisci con il tuo segnale desiderato
 6
 7 stty -F "$SERIAL_PORT" "$BAUD_RATE" cs8 -parenb -cstopb 2>/dev/null
 8
 9 if [ $? -ne 0 ]; then
10     echo "Errore: Impossibile configurare la porta seriale $SERIAL_PORT" >&2
11     exit 1
12 fi
13
14 printf "$SIGNAL" > "$SERIAL_PORT"
15
16 # Controlla se l'invio Ã¨ andato a buon fine (opzionale ma consigliato)
17 if [ $? -ne 0 ]; then
18     echo "Errore: Impossibile inviare il segnale sulla porta seriale $SERIAL_PORT" >&2
19     exit 1
20 fi
